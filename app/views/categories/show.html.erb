<h1>Category Listing View: <%= @category.name.capitalize %></h1>

<%= render 'articles/articles_listing' %>

<p><%= will_paginate @category_articles %></p>

<% if logged_in? && current_user.admin? %>
    <%= link_to 'Edit Category Name', edit_category_path(@category) %> | 
    <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
